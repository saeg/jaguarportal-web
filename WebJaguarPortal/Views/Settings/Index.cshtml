@model SettingsViewModel
@{
    ViewData["Title"] = "My account";
}
@section Scripts{
    <script>
        var urlPersonalForm = '@Url.Action("Personal")';
        var urlPasswordForm = '@Url.Action("Password")';
        var urlApiForm = '@Url.Action("Api")';
    </script>

    <script src="~/js/MyAccount.js" asp-append-version="true"></script>
}
    <div class="container-fluid uniquePanel">
        <div class="row">
            <div class="col-xl-3 col-lg-6">
                <h1>Settings</h1>
                <h3>Updated at: @Html.Raw(Model.UpdatedAt)</h3>
            </div>
        </div>
        <form method="post">
            <div class="row mt-5">
                <div class="col-xl-3 col-lg-6 mt-3">
                    <div class="mb-3">
                        <h4>Security</h4>

                        <div class="form-group mb-2">
                            <label asp-for="EntropyLevelPassword"></label>
                            @Html.DropDownListFor(model => model.EntropyLevelPassword, Model.EntropyLevelPasswordOptions, new { @class = "form-control", @required="required" })
                        </div>
                    </div>
                    <div class="mb-3">
                        <h4>SMTP</h4>

                        <div class="form-group mb-2">
                            <label asp-for="SmtpAddress"></label>
                            <input asp-for="SmtpAddress" type="text" class="form-control" placeholder="Example: smtp.office365.com">
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="SmtpPort"></label>
                            <input asp-for="SmtpPort" type="number" class="form-control" placeholder="Example: 587">
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="SmtpFrom"></label>
                            <input asp-for="SmtpFrom" type="text" class="form-control" placeholder="Example: contact@jaguarportal.com">
                        </div>
                        <div class="form-group mb-2 form-check form-switch">
                            <label asp-for="SmtpUseSSL"></label>
                            <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="SmtpUseSSL" />
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="SmtpUsername"></label>
                            <input asp-for="SmtpUsername" type="text" placeholder="Example: contact@jaguarportal.com" class="form-control">
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="SmtpPassword"></label>
                            <input asp-for="SmtpPassword" type="password" placeholder="Enter password only if you want to change" class="form-control">
                        </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <div class="col-xl-3 col-lg-6">
                    <div>
                        @Html.ValidationSummary()
                    </div>
                    <div class="float-end">
                        <a href="@Url.Action("Index","Home")" class="btn btn-outline-primary btn-light">Cancel</a>
                        <button class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </form>
    </div>