@model UserAddViewModel
@{
    ViewData["Title"] = "Projects";
}

<div class="container-fluid uniquePanel">

    <h1>New User</h1>

    <form method="post">
        <div class="row">
            <div class="col-xl-3 col-lg-6">
                <h4>Personal data</h4>
                <div class="form-group mb-2">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" type="text" class="form-control" placeholder="Name" required>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" required>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" type="text" class="form-control" placeholder="Last name" required>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" type="email" class="form-control" placeholder="E-mail" required>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-3 col-lg-6 mt-3">
                <h4>Roles</h4>

                <div class="form-check form-switch mb-3">
                    <input type="checkbox" onchange="javascript:if(this.checked){$('table').fadeOut(0)}else{$('table').fadeIn(0)}" class="form-check-input" class="form-check-input" asp-for="Roles.IsAdmin" />
                    <label asp-for="Roles.IsAdmin" class="form-check-label"></label>
                </div>

                <table class="table table-striped table-borderless table-dark">
                    <thead>
                        <tr>
                            <th>
                                Feature
                            </th>
                            <th>
                                List
                            </th>
                            <th>
                                Detail
                            </th>
                            <th>
                                New
                            </th>
                            <th>
                                Edit
                            </th>
                            <th>
                                Delete
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                Projects
                            </td>
                            <td>

                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.ProjectsPermission.List" /> </div>
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.ProjectsPermission.Detail" /></div>
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.ProjectsPermission.New" /></div>
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.ProjectsPermission.Edit" /></div>
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.ProjectsPermission.Delete" /></div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Analyzes
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.AnalyzesPermission.List" /></div>
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.AnalyzesPermission.Detail" /></div>
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.AnalyzesPermission.New" /></div>
                            </td>
                            <td>
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.AnalyzesPermission.Delete" /></div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Users
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.UsersPermission.List" /></div>
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.UsersPermission.Detail" /></div>
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.UsersPermission.New" /></div>
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.UsersPermission.Edit" /></div>
                            </td>
                            <td>
                                <div class="form-check form-switch"> <input type="checkbox" class="form-check-input" class="form-check-input" asp-for="Roles.UsersPermission.Delete" /></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            
                <div class="text-danger">
                    @Html.ValidationSummary()
                </div>
        </div>
        <div class="row">
            <div class="col-xl-3 col-lg-6">
                <div class="float-end">
                    <a href="@Url.Action("Index","Users")" class="btn btn-outline-primary btn-light">Cancel</a>
                    <button class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </form>

</div>
