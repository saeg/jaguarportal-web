@model IEnumerable<ProjectGridViewModel>
@{
    ViewData["Title"] = "Projects";
}

<div class="container-fluid uniquePanel">

    <div class="row">
        <div class="col">
            <h1>Projects</h1>

            @if (User.IsInRole(RolesUtil.ProjectsNew))
            {
                <div class="float-end mb-2">
                    <a href="@Url.Action("Add")" class="btn btn-primary" title="New">
                        <i class="fa-solid fa-plus fa-lg"></i> NEW
                    </a>
                </div>
            }
            <table class="table table-striped table-hover table-borderless table-dark align-middle">
                <thead>
                    <tr>
                        <td>
                            Name
                        </td>
                        <td>
                            Description
                        </td>
                        <td>
                            Key
                        </td>
                        <td>
                            Created at
                        </td>
                        <td>
                            Updated at
                        </td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                            <td>@item.Key</td>
                            <td>@item.CreatedAt</td>
                            <td>@item.UpdatedAt</td>
                            <td class="text-end">
                                @if (User.IsInRole(RolesUtil.ProjectsDetail))
                                {
                                    <a class="btn btn-primary" href="@Url.Action("Detail","Projects", new {id = item.Id})" title="Analyzes">
                                        <i class="fa-solid fa-eye fa-lg"></i> DETAIL
                                    </a>
                                }
                                @if (User.IsInRole(RolesUtil.AnalyzesList))
                                {
                                    <a class="btn btn-primary" href="@Url.Action("Project","Analyzes", new {id = item.Id})" title="Analyzes">
                                        <i class="fa-solid fa-chart-line fa-lg"></i> ANALYZES
                                    </a>
                                }
                                @if (User.IsInRole(RolesUtil.ProjectsEdit))
                                {
                                    <a class="btn btn-primary" href="@Url.Action("Edit","Projects", new {id = item.Id})" title="Edit">
                                        <i class="fa-solid fa-file-pen fa-lg"></i> EDIT
                                    </a>
                                }
                                @if (User.IsInRole(RolesUtil.ProjectsDelete))
                                {
                                    <a class="btn btn-primary" href="@Url.Action("Delete","Projects", new {id = item.Id})" title="Delete">
                                        <i class="fa-solid fa-trash-can fa-lg"></i> DELETE
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
